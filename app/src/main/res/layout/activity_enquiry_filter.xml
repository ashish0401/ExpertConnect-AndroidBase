<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/credits_gray"
    android:layout_height="match_parent"
    tools:context="com.expertconnect.app.activities.EnquiryFilter">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:padding="@dimen/padding_15"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="@dimen/padding_30"
            android:id="@+id/back"
            android:src="@drawable/back_btn"
            android:layout_height="@dimen/padding_30" />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_20"
            android:textColor="@color/login_orange"
            android:layout_centerHorizontal="true"
            android:text="@string/browseenquiry"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/padding_15"
        android:padding="@dimen/padding_25"
        android:background="@drawable/delete_background"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/spin_main"
            android:layout_width="match_parent"
            android:prompt="@string/maincategory"
            android:background="@drawable/spinner_custom"
            android:layout_height="40dp"/>
        <Spinner
            android:id="@+id/spin_sub"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/padding_15"
            android:background="@drawable/spinner_custom"
            android:prompt="@string/maincategory"
            android:layout_height="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@android:color/holo_red_light"
            android:textSize="@dimen/text_18"
            android:layout_marginTop="@dimen/padding_15"
            android:text="@string/amount"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_rate"
            android:layout_marginTop="15dp"
            android:layout_width="100dp"
            android:textSize="16sp"
            android:inputType="number"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:background="@drawable/border_bg"
            android:hint="@string/aus700"
            android:layout_height="40dp" />

        <Button
            android:layout_width="140dp"
            android:text="@string/search"
            android:layout_marginTop="@dimen/padding_15"
            android:textSize="@dimen/text_16"
            android:id="@+id/btn_send"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:background="@color/login_orange"
            android:layout_height="40dp" />
    </LinearLayout>
</LinearLayout>
