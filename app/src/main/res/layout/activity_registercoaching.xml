<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/coaching_main"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:id="@+id/back"
                android:src="@drawable/back_btn"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/tv_coaching"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_25"
                android:layout_centerHorizontal="true"
                android:text="@string/coaching"
                android:layout_height="wrap_content" />
        </RelativeLayout>
            <TextView
                android:id="@+id/tv_studentpref"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/padding_10"
               android:gravity="center_horizontal"
                android:text="@string/teachercoach"
                android:textSize="18sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/padding_15"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <View
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="1dp"/>

            <CheckBox
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:padding="@dimen/padding_25"
                android:layout_height="wrap_content"
                android:text="@string/home" />
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/padding_5"
                android:background="@color/black"
                android:layout_height="1dp"/>
            <CheckBox
                android:id="@+id/institute"
                android:layout_width="wrap_content"
                android:padding="@dimen/padding_25"
                android:layout_height="wrap_content"
                android:text="@string/institute" />

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/padding_5"
                android:background="@color/black"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/travel"
                android:layout_width="wrap_content"
                android:padding="@dimen/padding_25"
                android:layout_height="wrap_content"
                android:text="@string/travel" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_km"
                    android:text="@string/fifty"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/padding_25"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/padding_20"
                    android:paddingRight="@dimen/padding_20"
                    android:background="@color/login_orange"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <com.appyvet.rangebar.RangeBar
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rangebar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                custom:connectingLineColor="@color/edit_gray"
                custom:rangeBar="false"
                custom:tickHeight="3dp"
                custom:pinColor="@color/white"
                custom:rangeBarColor="@color/login_orange"
                custom:tickColor="@color/login_orange"
                custom:tickEnd="5"
                custom:tickInterval="1"
                custom:tickStart="1" />
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/padding_5"
                android:background="@color/black"
                android:layout_height="1dp"/>
            <CheckBox
                android:id="@+id/other"
                android:layout_width="wrap_content"
                android:padding="@dimen/padding_25"
                android:layout_height="wrap_content"
                android:text="@string/other" />

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/padding_5"
                android:background="@color/black"
                android:layout_height="1dp"/>
            <CheckBox
                android:id="@+id/online"
                android:layout_width="wrap_content"
                android:padding="@dimen/padding_25"
                android:layout_height="wrap_content"
                android:text="@string/online" />
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/padding_5"
                android:background="@color/black"
                android:layout_height="1dp"/>
            <CheckBox
                android:id="@+id/agree"
                android:layout_width="wrap_content"
                android:padding="@dimen/padding_25"
                android:layout_height="wrap_content"
                android:text="@string/agree" />

            <Button
                android:layout_width="180dp"
                android:text="@string/join"
                android:layout_marginTop="@dimen/padding_15"
                android:id="@+id/btnjoin"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:background="@color/login_orange"
                android:layout_height="50dp" />

        </LinearLayout>
    </LinearLayout>




</ScrollView>
