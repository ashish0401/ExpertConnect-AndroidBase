<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/credits_gray"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.expertconnect.app.activities.RegisterECredits">
<RelativeLayout
    android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="@dimen/padding_15"
    android:layout_weight="10"
    android:layout_height="0dp">

    <ImageView
        android:layout_width="@dimen/padding_30"
        android:id="@+id/back"
        android:src="@drawable/back_btn"
        android:layout_height="@dimen/padding_30" />
    <TextView
        android:id="@+id/tv_addecredits"
        android:layout_width="wrap_content"
        android:textSize="@dimen/text_25"
        android:textColor="@color/login_orange"
        android:layout_centerHorizontal="true"
        android:text="@string/addecredits"
        android:layout_height="wrap_content" />
</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="@dimen/padding_10"
        android:layout_weight="90">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:padding="@dimen/padding_15"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_height="100dp">
            <TextView
                android:layout_width="match_parent"
                android:inputType="textMultiLine"
                android:paddingLeft="@dimen/padding_10"
                android:hint="@string/entery20"
                android:background="@drawable/no_border"
                android:layout_height="match_parent" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_height="100dp">
            <TextView
                android:layout_width="match_parent"
                android:inputType="textMultiLine"
                android:paddingLeft="@dimen/padding_10"
                android:hint="@string/entery20"
                android:background="@drawable/no_border"
                android:layout_height="match_parent" />

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_height="100dp">
            <TextView
                android:layout_width="match_parent"
                android:inputType="textMultiLine"
                android:paddingLeft="@dimen/padding_10"
                android:hint="@string/entery20"
                android:background="@drawable/no_border"
                android:layout_height="match_parent" />

        </android.support.v7.widget.CardView>
        <Button
            android:layout_width="180dp"
            android:text="@string/skip"
            android:textSize="@dimen/text_18"
            android:layout_marginTop="@dimen/padding_15"
            android:id="@+id/btnskip"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:background="@color/login_orange"
            android:layout_height="50dp" />
    </LinearLayout>
</LinearLayout>
