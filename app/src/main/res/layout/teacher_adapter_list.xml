<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/padding_8"
    android:paddingLeft="@dimen/padding_15"
    android:paddingRight="@dimen/padding_15"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/delete_background"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="@dimen/padding_5"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/img_profile_image"
                android:layout_marginRight="@dimen/padding_20"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/default_profile_img"
                app:civ_border_color="#FF000000" />

            <TextView
                android:id="@+id/tv_requirement"
                android:layout_marginTop="@dimen/padding_10"
                android:lineSpacingExtra="3dp"
                android:layout_toRightOf="@+id/img_profile_image"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_20"
                android:text="@string/requierment"
                android:layout_height="wrap_content" />

            <RatingBar
                android:id="@+id/listitemrating"
                android:progressDrawable="@drawable/rating_selector"
                android:isIndicator="true"
                android:layout_below="@+id/tv_requirement"
                android:layout_marginTop="@dimen/padding_8"
                android:layout_marginLeft="60dp"
                android:numStars="5"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:gravity="center"
                android:rating="3"
                android:layout_width="wrap_content"
                android:layout_height="25dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_expertise"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_width="wrap_content"
                android:textColor="@android:color/holo_red_light"
                android:textSize="@dimen/text_18"
                android:text="@string/expertise"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_subcatname"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginLeft="@dimen/padding_8"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="@dimen/text_18"
                android:text="@string/salsa"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_fee_coaching"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_width="wrap_content"
                android:textColor="@android:color/holo_red_light"
                android:textSize="@dimen/text_18"
                android:text="@string/coaching1"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_preference"
                android:layout_marginRight="@dimen/padding_10"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginLeft="@dimen/padding_8"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="@dimen/text_18"
                android:text="@string/home"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_feeDetail"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_width="wrap_content"
                android:textColor="@android:color/holo_red_light"
                android:textSize="@dimen/text_18"
                android:text="@string/fee"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_fee"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginLeft="@dimen/padding_8"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="@dimen/text_18"
                android:text="@string/dollar"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_expert_location"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginLeft="@dimen/padding_8"
                android:layout_width="wrap_content"
                android:textColor="@android:color/holo_red_light"
                android:textSize="@dimen/text_18"
                android:text="@string/location1"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_place"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="@dimen/text_18"
                android:text="@string/Melbourn"
                android:layout_height="wrap_content" />
        </LinearLayout>



        <Button
            android:id="@+id/btn_sendoffer"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/padding_15"
            android:textStyle="normal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/padding_15"
            android:background="@color/login_orange"
            android:text="@string/request"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16" />

    </LinearLayout>



</LinearLayout>