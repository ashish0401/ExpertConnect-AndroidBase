<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/credits_gray"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/delete_background"
        android:padding="@dimen/padding_15"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="@dimen/padding_30"
            android:id="@+id/back"
            android:src="@drawable/back_btn"
            android:layout_height="@dimen/padding_30" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_20"
            android:textColor="@color/login_orange"
            android:layout_centerHorizontal="true"
            android:text="@string/teacherlist"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="@dimen/padding_30"
            android:id="@+id/img_filter"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/padding_5"
            android:src="@drawable/filter_btn"
            android:layout_height="@dimen/padding_30" />

    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_browse_expert"
        android:layout_marginTop="@dimen/padding_15"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>


</LinearLayout>
